# Public environment variables (accessible via import.meta.env.VITE_*)
# Only add variables here that change between environments
# Default values should be kept in the config files

# Base URL for the site (important for deployment)
VITE_PUBLIC_URL=https://champagnefestival.example.com/

# Site title (can be overridden for different environments)
VITE_SITE_TITLE=Champagne Festival

# API endpoints (if applicable)
# VITE_API_BASE_URL=https://api.example.com

# Build variables
# These affect how the site is built and deployed
BUILD_PATH=dist

# Email configuration for contact form (used in Cloudflare Functions)
# These should be set in the Cloudflare dashboard in production
# CONTACT_EMAIL=info@champagnefestival.be
# SMTP_HOSTNAME=smtp.example.com
# SMTP_USERNAME=noreply@example.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_PORT=587

# Anti-spam configuration (optional)
# RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key